import { Image, Text, View } from 'react-native';
import PageLayout from '@/components/general/PageLayout';

function Heading({ children }: { children: string }) {
  return (
    <Text style={{ marginTop: 16, fontSize: 21, fontWeight: 'bold', textAlign: 'center' }}>{children}</Text>
  )
}

function SubHeading({ children }: { children: string }) {
  return (
    <Text style={{ fontSize: 16, fontWeight: 'bold' }}>{children}</Text>
  )
}

function Paragraph({ children }: { children: string }) {
  return (
    <Text style={{ marginTop: 4, fontSize: 13, color: '#737373' }}>{children}</Text>
  )
}

interface SectionProps {
  children?: React.ReactNode;
  title: string;
}

function Section({ children, title }: SectionProps) {
  return (
    <View style={{ marginTop: 48 }}>
      <SubHeading>{title}</SubHeading>
      {children}
    </View>
  )
}
interface TableProps {
  width1: number;
  width2: number;
  data: Array<{ data1: string; data2: string }>;
}
function Table({ width1, width2, data }: TableProps) {
  return (
    <View style={{ marginBottom: 32, marginTop: 8 }}>
      <View style={{ flexDirection: 'row', gap: 32 }}>
        <Text style={{ flex: width1, fontWeight: 'bold', fontSize: 13 }}>Year</Text>
        <Text style={{ flex: width2, fontWeight: 'bold', fontSize: 13 }}>Milestone</Text>
      </View>
      {
        data.map((item, index) => (
          <View key={index} style={{ flexDirection: 'row', marginTop: 16, gap: 32 }}>
            <Text style={{ flex: width1, color: '#737373', fontSize: 13 }}>{item.data1}</Text>
            <Text style={{ flex: width2, color: '#737373', fontSize: 13 }}>{item.data2}</Text>
          </View>
        ))
      }
    </View>
  )
}

const table1Data = [
  { data1: '1950', data2: 'Alan Turing proposed the idea of machines \'thinking\' - Turing Test' },
  { data1: '1956', data2: 'The term Artificial Intelligence was officially coined at the Dartmouth Conference' },
  { data1: '1980s', data2: 'Expert systems and rule-based AI emerged' },
  { data1: '2010s', data2: 'Explosion of Machine Learning and Deep Learning, fueled by data and GPUs' },
  { data1: '2020s', data2: 'Rise of Generative AI, LLMs like ChatGPT, and widespread real wold AI appliactions' }
]

export default function Introduction() {
  return (
    <PageLayout headerTitle="Introduction to AI">
      <Image source={require('@/assets/images/blueTick.png')} style={{ marginHorizontal: 'auto', width: 256, height: 256 }} />
      <Heading>Introduction to AI: The Future Begins Here</Heading>
      <Section
        title="What is AI?"
      >
        <Paragraph>
          Artificial Intelligence (AI) is the science of building machines that can think, learn, and make decisions - just like humans, or even better. Itâ€™s the technology behind voice assistants, self-driving cars, face recognition, and smart recommendations on apps like Netflix or YouTube.
        </Paragraph>
        <Paragraph>
          At its core, AI is about teaching machines how to mimic human intelligence - whether it's recognizing patterns, solving problems, or making predictions.
        </Paragraph>
      </Section>
      <Section
        title="A Brief History of AI"
      >
        <Table
          width1={1 / 6}
          width2={5 / 6}
          data={table1Data}
        />
        <Paragraph>
          From simple chess engines to AI writing essays and generating images - AI has evolved from fantasy to everyday reality.
        </Paragraph>
      </Section>
    </PageLayout>
  );
}
